@model FitnessStation.Models.BindingModels.AddArticleBm
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Add Article";
}

@using (Html.BeginForm("Add", "Blog", FormMethod.Post))
{
    <form class="form-horizontal">
        <fieldset>
            <h4>@Html.LabelFor(t => t.Title)</h4>
            <div class="coll-lg-10">
                <input type="text" name="Title" />
            </div>
            <br />
            <div class="form-group">
                <div class="col-lg-10">
                    @Html.TextArea("Description", new { rows = 10, columns = 100 })
                </div>
            </div>
            <input type="submit" name="Add" />
        </fieldset>
    </form>
}


