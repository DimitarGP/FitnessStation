@model FitnessStation.Models.ViewModels.Admin.AdminPageVm
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Admin Panel</h2>
@Html.ActionLink("Add Workout", "AddWorkout", "Admin", null, new { @class = "btn btn-sm btn-success" })
<div class="row">   
    <div class="col-sm-5 admin-border">
        <h3>Workouts</h3>
        @foreach (var workout in Model.Workouts)
        {
            <div class="admin-workouts">
                <h4>@Html.DisplayFor(vms => workout.Name)</h4>
                @Html.ActionLink("Edit", "EditWorkout", new { id = workout.Id }, new { @class = "btn btn-md btn-warning" })
            </div>
        }
    </div>
    <div class="col-sm-5 col-sm-offset-1 admin-border">
        <h3>Users</h3>
        @foreach (var user in Model.Users)
        {
            <div class="admin-users">
                <h4>@Html.DisplayFor(vms => user.Name)</h4>
                @Html.ActionLink("Edit", "EditUsers", new {id = user.Id}, new {@class = "btn btn-md btn-warning"})
            </div>
        }
    </div>
</div>