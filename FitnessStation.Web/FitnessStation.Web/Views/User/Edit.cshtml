@model FitnessStation.Models.ViewModels.Users.EditUserVm
    
@{
    ViewBag.Title = "Edit Profile";
}

<h2>Edit Profil</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(vm => vm.Email)
        @Html.EditorFor(vm => vm.Email, new {htmlAttribute = new {@class="form-control"}})
    </div>

    <div class="form-group">
        @Html.LabelFor(vm => vm.Name)
        @Html.EditorFor(vm => vm.Name, new { htmlAttribute = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <input type="submit" value="Edit" class="form-control"/>
    </div>
}